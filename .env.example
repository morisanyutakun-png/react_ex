# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=examgen
DATABASE_URL=postgresql://postgres:password@db:5432/examgen

# Embedding / model
PGVECTOR_DIM=768
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_VERSION=v1

# RAG
RAG_PROFILE_PATH=./configs/rag_profiles.yaml
RAG_DEFAULT_KIND_PRIORITY=stem,normalized_text,solution_outline,latex_signature

# PDF engine: tectonic or pdflatex
PDF_ENGINE=tectonic

LOG_LEVEL=INFO

# Frontend (Next.js / Vercel)
# API_BASE_URL is used by Next.js rewrites (server-side).
# Example: https://your-backend.example.com
API_BASE_URL=
# Optional: if you want the browser to call backend directly (CORS required)
NEXT_PUBLIC_API_BASE=
